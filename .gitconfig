[user]
	name = nix
	email = nix@mecx.com
[core]
	editor = vim
	quotepath = false
	autocrlf = input
  ignorecase = false
[pull]
  rebase = false
[diff]
	tool = vimdiff
[paper]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[commit]
  # template= ~/.gitmessage
[alias]
	st = status
	l = log --pretty=oneline -n 20 --graph --abbrev-commit
	ll = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	b = branch
	ci = commit -v
	ca = commit -a -v
	pl = pull
	ps = push
	co = checkout
	df = diff

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[init]
	defaultBranch = master
